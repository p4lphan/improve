<section id="main">
    <section class="box highlight">
        <ul class="special">
                {% for typePublication in typePublications %}
                    {% if typePublication.publications|length>0 %}
                            <li><a href="#{{typePublication.name}}" class="icon fa-quote-right" title="{{typePublication.name}}">
                            <span style="font-size: 1.65em;margin: 1.5em 0 1.5em 0;font-family: 'Open Sans Condensed', sans-serif;font-weight: 700;line-height: 2em;text-transform: uppercase;color: #c1cac5;">{{typePublication.name}}s</span></a></li>
                   {% endif %}
                 {% endfor %}    
                 <li><a href="#tous" class="icon fa-quote-right" title="Toutes les types de publications">
                        <span style="font-size: 1.65em;margin: 1.5em 0 1.5em 0;font-family: 'Open Sans Condensed', sans-serif;font-weight: 700;line-height: 2em;text-transform: uppercase;color: #c1cac5;">Toutes</span></a></li>
                 <li><a href="{{path("publication_add")}}" class="icon fa-plus" title="Nouvelle publication">
                        <span style="font-size: 1.65em;margin: 1.5em 0 1.5em 0;font-family: 'Open Sans Condensed', sans-serif;font-weight: 700;line-height: 2em;text-transform: uppercase;color: #c1cac5;">Ajouter</span></a></li>  
                 <li><a href="{{path("publication_export")}}" class="icon fa-download" title="Exporter en json">
                        <span style="font-size: 1.65em;margin: 1.5em 0 1.5em 0;font-family: 'Open Sans Condensed', sans-serif;font-weight: 700;line-height: 2em;text-transform: uppercase;color: #c1cac5;">Exporter</span></a></li>               
        </ul>
        <header>
                <h2>Que voulez-vous visualiser ?</h2>
                <p>Cliquer sur le type de publication de votre choix</p>
        </header>
        <p>
        </p>
    </section>
    <div class="container">
            <div class="row">
                    <div class="col-12">
                       
                                {% for typePublication in typePublications %}
                                    {% if typePublication.publications|length >0  %}
                                       <section id="{{typePublication.name}}" class="box features">
                                          <h2 class="major"><span>Mes {{typePublication.name}}s</span></h2>
                                          <div>

                                                  <div class="row">
                                                           {% for key, publication in typePublication.publications %}
                                                               {% if publication.getUser.id==app.user.id %}
                                                                {% include 'publication/parts/parts-thumbnail.html.twig' with {'publication':publication} %}
                                                               {% endif %}
                                                           {%endfor%}
                                                  </div>

                                          </div>
                                          <div class="col-12">
                                                      <ul class="actions">
                                                              <li><a href="#main" class="button alt large">Remonter</a></li>
                                                      </ul>
                                          </div>
                                        </section>     
                                      {% endif %}                     
                                {% endfor%} 
                               
                                 <section id="tous" class="box features">
                                    <h2 class="major"><span>Toutes mes publications</span></h2>
                                    <div>
                                        <div class="row">
                                    {% for typePublication in typePublications %}                                            
                                                     {% for key, publication in typePublication.publications %}
                                                         {% if publication.getUser.id==app.user.id %}
                                                         {% include 'publication/parts/parts-thumbnail.html.twig' with {'publication':publication} %}
                                                         {% endif %}
                                                     {%endfor%}                                            
                                    {% endfor%}  
                                </section>  
                                
                                <div class="col-12">
                                    <ul class="actions">
                                            <li><a href="#main" class="button alt large">Remonter</a></li>
                                    </ul>
                                </div>
                    </div>
            </div>
    </div>
</section>